<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rover">
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="blue">
        <color rgba="0 0 0.5 1"/>
    </material>

    <!-- Define the chassis -->
    <link name="base_link"/>
    <link name="chassis">
        <visual>
            <geometry>
                <box size="0.6 0.1 0.2"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.6 0.1 0.2"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
        </collision>
        <inertial>
            <mass value="10"/>
            <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3"/>
        </inertial>
    </link>
    <joint name="base_chassis" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>    

    <!-- Define the wheels -->
    <xacro:macro name="wheel" params="prefix xyz">
        <link name="${prefix}_wheel">
            <visual>
                <geometry>
                    <cylinder length="0.6" radius="0.2"/>
                </geometry>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <material name="black"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder length="0.6" radius="0.2"/>
                </geometry>
                <origin rpy="0 0 0" xyz="0 0 0"/>
            </collision>
            <inertial>
                <mass value="10"/>
                <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3"/>
            </inertial>
        </link>
        <joint name="joint_${prefix}" type="continuous">
            <parent link="chassis"/>
            <child link="${prefix}_wheel"/>
            <axis xyz="0 0 1"/>
            <!--limit effort="1000.0" lower="0.0" upper="0.548" velocity="0.5"/-->
            <origin rpy="0 0 0" xyz="${xyz}"/>
        </joint>
    </xacro:macro>

    <!-- Create 6 wheels -->
    <xacro:wheel prefix="wheel1" xyz="0.2 0.01 0"/>
    <xacro:wheel prefix="wheel2" xyz="0.2 0.01 0"/>
    <xacro:wheel prefix="wheel3" xyz="0.2 0.01 0"/>
    <xacro:wheel prefix="wheel4" xyz="0.2 0.01 0"/>
    <xacro:wheel prefix="wheel5" xyz="0.2 0.01 0"/>
    <xacro:wheel prefix="wheel6" xyz="0.2 0.01 0"/>

</robot>